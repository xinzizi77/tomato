.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.bg .mainbox{
  width: 78%;
  height: 190px;
  margin-left: 11%;
  margin-top: 120px;
  background: #fff;
  border-radius: 3px;
}
.bg .mainbox .top{
  display: flex;
  flex-direction: row;
  height: 50px;
  line-height: 50px;
  background: #F5F3CD;
  border-radius: 3px 3px 0 0;
}
.bg .mainbox .top .text{
  width: 60%;
  padding-left: 6%;
}
.bg .mainbox .top .true,.bg .mainbox .top .false{
  width: 17%;
  text-align: center;
}
.bg .bottom .input{
  width: 90%;
  height: 40px;
  margin-left: 5%;
  border-bottom: 2px solid #F5F3CD;
}
.bg .bottom .input input{
  width: 100%;
  height: 40px;
  margin-top: 5px;
}
.bg .bottom .time{
  width: 90%;
  display: flex;
  flex-direction: row;
  height: 50px;
  margin-top: 10px;
  margin-left: 5%;
  border-bottom: 2px solid #F5F3CD;  
  /* font-size: 15px; */
}
.bg .bottom .time input{
  width:100%;
  height: 50px;
}
.bg .del_box{
  position: absolute;
  top: 920rpx;
  width: 92%;
  left: 4%;
}
.bg .button{
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  margin-top: 26rpx;
  background: #fff;  
  border-radius: 3px;
  font-size: 20px;  
}