/* pages/unlockimg/unlockimg.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #d98e44;
}

.title text {
  width: 100%;
  float: left;
  text-align: center;
  margin-top: 80rpx;
  color: white;
  margin-bottom: 80rpx;
  font-size: 20px;
}

.music {
  display: flex;
  flex-direction: column;
  width: 100%;
  color: #fff;
}

.music .row {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 100rpx;
  margin-left: 5%;
  border-bottom: 1px solid #fff;
}

.music .row .music_name {
  width: 60%;
  text-align: center;
  line-height: 100rpx;
}

.music .row .lock {
  width: 21%;
  height: 67rpx;
  margin-left: 8%;
  margin-top: 18rpx;
  line-height: 67rpx;
  text-align: center;
}

.music .row .unlock {
  width: 21%;
  height: 67rpx;
  margin-top: 18rpx;
  margin-left: 7%;
  padding-left: 2%;
  border: 1px solid #fff;
  border-radius: 10%;
}

.music .row .unlock image {
  width: 55rpx;
  height: 55rpx;
  margin-top: 4rpx;
}

.music .row .unlock text {
  float: right;
  height: 55rpx;
  line-height: 55rpx;
  margin-right: 20%;
  margin-top: 6rpx
}
audio{
  display: inline;
}
.return{
  height: 20rpx;
  padding-left: 16px;
  padding-top:8px;
  color: #fff;
}
