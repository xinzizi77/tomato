/* pages/unlockimg/unlockimg.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #d98e44;
}

.container {
  padding: 50rpx 0;
}

.title text {
  width: 100%;
  float: left;
  text-align: center;
  margin-top: 25rpx;
  color: white;
  font-size: 20px;
}

.movie {
  display: flex;
}

.movie-details {
  display: flex;
  flex-direction: column;
  width: 550rpx;
}

.movie-image {
  width: 500rpx;
  height: 80%;
  margin-bottom: 40rpx;
}

.movie-swiper {
  height: 80vh;
}

.movie-card {
  height: 85%;
  width: 100%;
  background: #e8b98a;
  margin: 30rpx 20rpx;
}

.return-button {
  position: absolute;
  right: 0;
  top: 40px;
  font-size: 26rpx;
  font-style: italic;
  border: 1px solid blue;
  border-right: 0;
  border-radius: 10%;
}

.jinbi {
  float: left;
}
.jinbi image {
  width: 75rpx;
  height: 75rpx;
  float: left;
}

.jinbi text {
  float: left;
  margin-top: 14rpx;
  font-size: 43rpx;
}
button{
  margin-top: 20rpx;
  padding-left: 8px;
  padding-right: 8px;
}
.return{
  height: 20rpx;
  padding-left: 16px;
  padding-top:8px;
  color: #fff;
}
