/* pages/unlockimg/unlockimg.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #d98e44;
}

.container {
  padding: 50rpx 0;
}

.title text {
  width: 100%;
  float: left;
  text-align: center;
  margin-top: 25rpx;
  color: white;
  font-size: 20px;
}

.movie {
  display: flex;
}

.movie-details {
  display: flex;
  flex-direction: column;
  width: 550rpx;
}

.movie-image {
  width: 500rpx;
  height: 80%;
  margin-bottom: 40rpx;
}

.movie-swiper {
  height: 76vh;
}

.movie-card {
  height: 85%;
  width: 100%;
  background: #e8b98a;
  margin: 30rpx 20rpx;
}

.return-button {
  position: absolute;
  right: 0;
  top: 40px;
  font-size: 26rpx;
  font-style: italic;
  border: 1px solid blue;
  border-right: 0;
  border-radius: 10%;
}

.jinbi {
  display: flex;
  flex-direction: column;
}
.img{
  display: flex;
  flex-direction: row;
}
.jinbi image {
  width: 75rpx;
  height: 75rpx;
  float: left;
}

.jinbi text {
  float: left;
  margin-top: 14rpx;
  font-size: 43rpx;
}
button{
  margin-top: 20rpx;
  padding-left: 8px;
  padding-right: 8px;
}
.return{
  width:80%;
  height: 29px;
  line-height: 29px;
  padding-left: 16px;
  padding-top:8px;
  color: #fff;
}
.go{
  width: 38%;
  height: 29px;
  line-height: 29px;
  color: #fff;
  text-align: center;
    padding-top:8px;
}
.button{
  display: flex;
  flex-direction: row;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.bg .mainbox{
  width: 78%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-left: 11%;
  margin-top: 55%;
  background: #fff;
  border-radius: 3px;
}